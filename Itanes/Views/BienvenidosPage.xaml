<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Itanes.Views.BienvenidosPage"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Padding="29" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            <Image Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Source="logo.png"
                   HeightRequest="100"
                   Aspect="AspectFit"
                   Margin="14"/>
            <Label Grid.Row="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Text="Bienvenidos a Itanes "
                   HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   TextColor="White"
                   
                      
                FontSize="40"    
                   HorizontalTextAlignment="Center"
                   />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>